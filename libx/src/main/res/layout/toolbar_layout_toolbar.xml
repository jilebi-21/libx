<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tl_toolbar"
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize"
    android:layout_gravity="bottom"
    android:layout_marginTop="@dimen/toolbar_margin_top"
    app:contentInsetStartWithNavigation="0dp"
    app:layout_collapseMode="pin"
    app:title=" ">

    <LinearLayout
        android:id="@+id/tl_collapsed_title_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tl_collapsed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:textAppearance="@style/Toolbar.Collapsed.Title.Text"
            android:textDirection="locale"
            tools:text="Hello" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tl_collapsed_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:textAppearance="@style/Toolbar.Collapsed.Subtitle.Text"
            android:textDirection="locale"
            android:visibility="gone" />
    </LinearLayout>
</androidx.appcompat.widget.Toolbar>