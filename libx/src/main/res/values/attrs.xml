<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ToolBarLayout">
        <attr name="android:layout" />
        <attr name="title" format="string" />
        <attr name="subtitle" format="string" />
        <attr name="expandable" format="boolean" />
        <attr name="expanded" format="boolean" />
        <attr name="showDefaultBackIcon" format="boolean" />
        <attr name="navigationIcon" format="reference" />
    </declare-styleable>

    <declare-styleable name="ToolBarLayout_Layout">
        <attr name="layout_location">
            <enum name="custom_header" value="0" />
            <enum name="footer" value="1" />
        </attr>
    </declare-styleable>

    <attr name="cornerRadius" format="dimension" />
    <attr name="backgroundColor" format="color" />

    <declare-styleable name="RoundedLinearLayout">
        <attr name="cornerRadius" />
        <attr name="backgroundColor" />
    </declare-styleable>

    <declare-styleable name="RoundedFrameLayout">
        <attr name="cornerRadius" />
        <attr name="backgroundColor" />
    </declare-styleable>
</resources>